<Window x:Class="Sistema_de_Inventario.GestorDeInventario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sistema_de_Inventario"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="GestorDeInventario" Height="960" Width="1000">
    <Grid Background="#1E3A5F">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <TabControl Background="#1E3A5F" Grid.ColumnSpan="2" Grid.RowSpan="2">
           
            <TabItem Header="Agregar Producto" 
                     Width="300" Height="50"
                     FontSize="30">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                   
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <TextBox Name="text_id_proveedor"
                             Grid.Column="0"
                             Grid.Row="1"
                             Margin="10,20"
                             Background="Beige"  
                             Text="Id Proveedor"
                             Foreground="Gray"
                             FontSize="25"
                             TextAlignment="Center"
                             GotFocus="text_id_proveedor_GotFocus"
                             LostFocus="text_id_proveedor_LostFocus"
                             KeyDown="text_id_proveedor_KeyDown"></TextBox>
                    
                    <Button Name="button_buscar_proveedor" 
                            FontSize="25"
                            Grid.Column="0"
                            Grid.Row="2"
                            Margin="10,20"
                            Content="Buscar proveedor" Click="button_buscar_proveedor_Click"
                            ></Button>

                    <TextBox Name="text_nombre"
                             Grid.Row="3"
                             Margin="10,20"
                             FontSize="25"
                             TextAlignment="Center"
                             Background="Beige"  
                             Text="Nombre"
                             Foreground="Black"
                             GotFocus="text_nombre_GotFocus"
                             LostFocus="text_nombre_LostFocus"
                             IsEnabled="false"
                             ></TextBox>
                    <TextBox Name="text_telefono"
                             Grid.Row="4"
                             Margin="10,20"
                             FontSize="25"
                             TextAlignment="Center"
                             Background="Beige"  
                             Text="Telefono"
                             Foreground="Black"
                             GotFocus="text_telefono_GotFocus"
                             LostFocus="text_telefono_LostFocus"
                             IsEnabled="False"></TextBox>
                    <TextBox Name="text_contacto"
                             Grid.Row="5"
                             Margin="10,20"
                             FontSize="25"
                             TextAlignment="Center"
                             Background="Beige"  
                             Text="Contacto"
                             Foreground="Black"
                             GotFocus="text_contacto_GotFocus"
                             LostFocus="text_contacto_LostFocus"
                             IsEnabled="False"></TextBox>
                    <Button Name="button_rgistrar_proveedor"
                            Grid.Column="0"
                            Grid.Row="7"
                            Margin="10,20"
                            FontSize="25"
                            Content="Registrar Proveedor"
                            Click="button_rgistrar_proveedor_Click"
                            IsEnabled="False"></Button>    
             

                <TextBox Name="text_id_producto"
                             Grid.Column="2"
                             Grid.Row="1"
                             Margin="10,20"
                             FontSize="25"
                             TextAlignment="Center"
                             Background="Beige"  
                             Text="Id Producto"
                             Foreground="Gray"
                             GotFocus="text_id_producto_GotFocus"
                             LostFocus="text_id_producto_LostFocus"></TextBox>
                    <Button Name="button_buscar_producto"
                            Grid.Column="2"
                            Grid.Row="2"
                            Margin="10,20"
                            FontSize="25"
                            Content="Buscar Producto" 
                            Click="button_buscar_producto_Click"
                            ></Button>

                    <TextBox Name="text_nombre_producto"
                             Grid.Column="2"
                             Grid.Row="3"
                             Margin="10,20"
                             FontSize="25"
                             TextAlignment="Center"
                             Background="Beige"  
                             Text="Nombre Producto"
                             Foreground="Gray"
                             GotFocus="text_nombre_producto_GotFocus"
                             LostFocus="text_nombre_producto_LostFocus"></TextBox>
                    <TextBox Name="text_categoria_producto"
                             Grid.Column="2"
                             Grid.Row="4"
                             Margin="10,20"
                             FontSize="25"
                             TextAlignment="Center"
                             Background="Beige"  
                             Text="Categoria Producto"
                             Foreground="Gray"
                             GotFocus="text_categoria_producto_GotFocus"
                             LostFocus="text_categoria_producto_LostFocus"></TextBox>
                    <TextBox Name="text_precio_producto"
                             Grid.Column="2"
                             Grid.Row="5"
                             Margin="10,20"
                             FontSize="25"
                             TextAlignment="Center"
                             Background="Beige"  
                             Text="Precio Producto"
                             Foreground="Gray"
                             GotFocus="text_precio_producto_GotFocus"
                             LostFocus="text_precio_producto_LostFocus"></TextBox> 
                    <TextBox Name="text_cantidad_producto"
                             Grid.Column="2"
                             Grid.Row="6"
                             Margin="10,20"
                             FontSize="25"
                             TextAlignment="Center"
                             Background="Beige"  
                             Text="Cantidad Producto"
                             Foreground="Gray"
                             GotFocus="text_cantidad_producto_GotFocus"
                             LostFocus="text_cantidad_producto_LostFocus"></TextBox>
                    <Button Name="button_agregar_datos"
                            Grid.Column="1"
                            Grid.Row="8"
                            Margin="10,20"
                            FontSize="25"
                            Content="Guardar Datos"
                            Click="button_agregar_datos_Click"></Button>
                    <Button Name="button_actualizar_datos"
                            Grid.Column="2"
                            Grid.Row="7"
                            Margin="10,20"
                            FontSize="25"
                            Content="Actualizar"
                            Click="button_actualizar_datos_Click"></Button>

                </Grid>
            </TabItem>
            <TabItem Header="Buscar" 
                     Width="300" Height="50"
                     FontSize="30">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                      
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <TextBox Name="text_caja_busqueda"
                             Margin="10,20"
                             Grid.Column="0"
                             Grid.ColumnSpan="2"
                             Grid.Row="1"></TextBox>
                    <Button Name="button_caja_busqueda"
                            Margin="10,20"
                            Grid.Column="2"
                            Grid.Row="1"
                            Content="Buscar" Click="button_caja_busqueda_Click"></Button>
                    <ComboBox Name="combobox_busqueda_productos"
                              Margin="10,25"
                              Grid.Column="2">
                        <ComboBoxItem Content="Nombre"></ComboBoxItem>
                        <ComboBoxItem Content="Categoria"></ComboBoxItem>
                    </ComboBox>
                    <DataGrid Name="datagrid_busqueda_productos"
                              Grid.ColumnSpan="3"
                              Grid.RowSpan="6"
                              Grid.Row="2"
                              Margin="10"
                              ></DataGrid>
                    
                </Grid>


            </TabItem>
            <TabItem Header="Listar Inventario" 
                     Width="300" Height="50"
                     FontSize="30">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"></RowDefinition>
                        <RowDefinition Height="100"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <TextBox Name="textbox_listar"
                             Grid.Row="1"
                             Grid.ColumnSpan="2"
                             Margin="10,20"
                             Text="id proveedor"
                             Foreground="Gray"
                             ></TextBox>
                    
                    <Button Name="button_listar"
                            Grid.Column="2"
                            Margin="10,20"
                            Grid.Row="1"
                            Content="listar Productos"
                            Click="button_listar_Click"></Button>
                    
                    <DataGrid Name="datagrid_listar"
                              Grid.Row="2"
                              Grid.ColumnSpan="3"
                              Margin="10"></DataGrid>

                </Grid>


            </TabItem>

           
        </TabControl>
        
    </Grid>
</Window>
