<Window x:Class="Sistema_de_Inventario.GestorDeInventario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sistema_de_Inventario"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="GestorDeInventario" Height="960" Width="1000">
    <Grid Background="#1E3A5F">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <TabControl Background="#1E3A5F" Grid.ColumnSpan="2" Grid.RowSpan="2">
           
            <TabItem Header="Agregar Producto" 
                     Width="300" Height="50"
                     FontSize="30">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                   
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <TextBox Name="text_id_proveedor"
                             Grid.Column="0"
                             Grid.Row="1"
                             Margin="10,20"
                             Background="Beige"  
                             FontSize="25"
                             TextAlignment="Center"
                             TextChanged="text_id_proveedor_TextChanged"></TextBox>
                    <TextBlock
                             Name="placeholder_id_proveedor"
                             Grid.Column="0"
                             Grid.Row="1"
                             Margin="10,20"
                             Text="Id Proveedor"
                             Foreground="Gray"
                             FontSize="25"
                             IsHitTestVisible="False"
                             Visibility="Visible"
                             TextAlignment="Center"
                        ></TextBlock>
                    <Button Name="button_buscar_proveedor" 
                            FontSize="25"
                            Grid.Column="0"
                            Grid.Row="2"
                            Margin="10,20"
                            Content="Buscar proveedor" Click="button_buscar_proveedor_Click"
                            ></Button>

                    <TextBox Name="text_nombre"
                             Grid.Row="3"
                             Margin="10,20"
                             FontSize="25"
                             TextAlignment="Center"
                             Background="Beige"  
                             Foreground="Black"
                             TextChanged="text_nombre_TextChanged"
                             IsEnabled="false"
                             ></TextBox>
                    <TextBlock
                             Name="placeholder_nombre"
                             Grid.Column="0"
                             Grid.Row="3"
                             Margin="10,20"  
                             Text="Nombre"
                             Foreground="Gray"
                             FontSize="25"
                               IsHitTestVisible="False"
                               Visibility="Visible"
                             TextAlignment="Center"
                        ></TextBlock>
                    
                    <TextBox Name="text_telefono"
                             Grid.Row="4"
                             Margin="10,20"
                             FontSize="25"
                             TextAlignment="Center"
                             Background="Beige"  
                             TextChanged="text_telefono_TextChanged"
                             IsEnabled="False"></TextBox>

                    <TextBlock Name="placeholder_telefono"
                             Grid.Row="4"
                             Margin="10,20"
                             FontSize="25"
                             TextAlignment="Center"
                             Foreground="Gray"
                             Text="Telefono"
                               IsHitTestVisible="False"
                               Visibility="Visible"
                             ></TextBlock>

                    <TextBox Name="text_contacto"
                             Grid.Row="5"
                             Margin="10,20"
                             FontSize="25"
                             TextAlignment="Center"
                             Background="Beige"  
                             Foreground="Black"
                             TextChanged="text_contacto_TextChanged"
                             IsEnabled="False"></TextBox>

                    <TextBlock Name="placeholder_contacto"
                             Grid.Row="5"
                             Margin="10,20"
                             FontSize="25"
                             TextAlignment="Center"
                             Text="Contacto"
                               IsHitTestVisible="False"
                               Visibility="Visible"
                             Foreground="Gray"
                             
                               ></TextBlock>

                    <Button Name="button_rgistrar_proveedor"
                            Grid.Column="0"
                            Grid.Row="7"
                            Margin="10,20"
                            FontSize="25"
                            Content="Registrar Proveedor"
                            Click="button_rgistrar_proveedor_Click"
                            IsEnabled="False"></Button>    
             

                <TextBox Name="text_id_producto"
                             Grid.Column="2"
                             Grid.Row="1"
                             Margin="10,20"
                             FontSize="25"
                             TextAlignment="Center"
                             Background="Beige" 
                             Foreground="Black"
                         TextChanged="text_id_producto_TextChanged"></TextBox>

                    <TextBlock Name="placeholder_id_producto"
                             Grid.Column="2"
                             Grid.Row="1"
                             Margin="10,20"
                             FontSize="25"
                             TextAlignment="Center"
                             Text="Id Producto"
                             Foreground="Gray"
                             IsHitTestVisible="False"></TextBlock>
                    
                    
                    <Button Name="button_buscar_producto"
                            Grid.Column="2"
                            Grid.Row="2"
                            Margin="10,20"
                            FontSize="25"
                            Content="Buscar Producto" 
                            Click="button_buscar_producto_Click"
                            ></Button>

                    <TextBox Name="text_nombre_producto"
                             Grid.Column="2"
                             Grid.Row="3"
                             Margin="10,20"
                             FontSize="25"
                             TextAlignment="Center"
                             Background="Beige"  
                             Foreground="Black"
                             TextChanged="text_nombre_producto_TextChanged"
                        ></TextBox>
                    <TextBlock Name="placeholder_nombre_producto"
                             Grid.Column="2"
                             Grid.Row="3"
                             Margin="10,20"
                             FontSize="25"
                             TextAlignment="Center"
                             Text="Nombre Producto"
                             IsHitTestVisible="False"
                             Foreground="Gray"
                        ></TextBlock>
                    <TextBox Name="text_categoria_producto"
                             Grid.Column="2"
                             Grid.Row="4"
                             Margin="10,20"
                             FontSize="25"
                             TextAlignment="Center"
                             Background="Beige"  
                             Foreground="black"
                             TextChanged="text_categoria_producto_TextChanged"
                           ></TextBox>
                    <TextBlock Name="placeholder_categoria_producto"
                             Grid.Column="2"
                             Grid.Row="4"
                             Margin="10,20"
                             FontSize="25"
                             TextAlignment="Center"
                             Text="Categoria Producto"
                               IsHitTestVisible="False"
                             Foreground="Gray"
                           ></TextBlock>
                    <TextBox Name="text_precio_producto"
                             Grid.Column="2"
                             Grid.Row="5"
                             Margin="10,20"
                             FontSize="25"
                             TextAlignment="Center"
                             Background="Beige"  
                             Foreground="black"
                             TextChanged="text_precio_producto_TextChanged"
                            ></TextBox> 
                    <TextBlock Name="placeholder_precio_producto"
                             Grid.Column="2"
                             Grid.Row="5"
                             Margin="10,20"
                             FontSize="25"
                             TextAlignment="Center"
                             Text="Precio Producto"
                               IsHitTestVisible="False"
                             Foreground="Gray"
                            ></TextBlock> 
                    
                    <TextBox Name="text_cantidad_producto"
                             Grid.Column="2"
                             Grid.Row="6"
                             Margin="10,20"
                             FontSize="25"
                             TextAlignment="Center"
                             Background="Beige"  
                             Foreground="Black"
                             TextChanged="text_cantidad_producto_TextChanged"
                           ></TextBox>
                    <TextBlock Name="placeholder_cantidad_producto"
                             Grid.Column="2"
                             Grid.Row="6"
                             Margin="10,20"
                             FontSize="25"
                             TextAlignment="Center"
                             Text="Cantidad Producto"
                             IsHitTestVisible="False"
                             Foreground="Gray"
                           ></TextBlock>
                    <Button Name="button_agregar_datos"
                            Grid.Column="1"
                            Grid.Row="8"
                            Margin="10,20"
                            FontSize="25"
                            Content="Guardar Datos"
                            Click="button_agregar_datos_Click"></Button>
                    <Button Name="button_actualizar_datos"
                            Grid.Column="2"
                            Grid.Row="7"
                            Margin="10,20"
                            FontSize="25"
                            Content="Actualizar"
                            Click="button_actualizar_datos_Click"></Button>

                </Grid>
            </TabItem>
            <TabItem Header="Buscar" 
                     Width="300" Height="50"
                     FontSize="30">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                      
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <TextBox Name="text_caja_busqueda"
                             Margin="10,20"
                             Grid.Column="0"
                             Grid.ColumnSpan="2"
                             VerticalAlignment="Center"
                             Grid.Row="1"
                             TextChanged="text_caja_busqueda_TextChanged"></TextBox>
                    <TextBlock Name="placeholder_caja_busqueda"
                               Text="Buscar"
                               Foreground="Gray"
                               VerticalAlignment="Center"
                               Margin="10,20"
                               Grid.Column="0"
                               Grid.ColumnSpan="2"
                               Grid.Row="1"
                               IsHitTestVisible="False"
                               Visibility="Visible"
                               ></TextBlock>
                    <Button Name="button_caja_busqueda"
                            Margin="10,20"
                            Grid.Column="2"
                            Grid.Row="1"
                            Content="Buscar" Click="button_caja_busqueda_Click"></Button>
                    <ComboBox Name="combobox_busqueda_productos"
                              Margin="10,25"
                              Grid.Column="2">
                        <ComboBoxItem Content="Nombre"></ComboBoxItem>
                        <ComboBoxItem Content="Categoria"></ComboBoxItem>
                    </ComboBox>
                    <DataGrid Name="datagrid_busqueda_productos"
                              Grid.ColumnSpan="3"
                              Grid.RowSpan="6"
                              Grid.Row="2"
                              Margin="10"
                              ></DataGrid>
                    
                </Grid>


            </TabItem>
            <TabItem Header="Listar Inventario" 
                     Width="300" Height="50"
                     FontSize="30">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"></RowDefinition>
                        <RowDefinition Height="100"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <TextBox Name="textbox_listar"
                             Grid.Row="1"
                             Grid.ColumnSpan="2"
                             VerticalAlignment="Center"
                             Margin="10,20"
                             Foreground="Gray"
                             TextChanged="textbox_listar_TextChanged"
                             ></TextBox>
                    <TextBlock Name="placeholder_listar"
                               Text="id proveedor"
                               Grid.Row="1"
                               Grid.ColumnSpan="2"
                               Foreground="Gray"
                               VerticalAlignment="Center"
                               Margin="15,20"
                               IsHitTestVisible="False"
                               Visibility="Visible"/>   

                    <Button Name="button_listar"
                            Grid.Column="2"
                            Margin="10,20"
                            Grid.Row="1"
                            Content="listar Productos"
                            Click="button_listar_Click"></Button>
                    
                    <DataGrid Name="datagrid_listar"
                              Grid.Row="2"
                              Grid.ColumnSpan="3"
                              Margin="10"></DataGrid>

                </Grid>


            </TabItem>

           
        </TabControl>
        
    </Grid>
</Window>
